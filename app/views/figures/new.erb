<h2>Add a new Figure</h2>

<form action="/figures" method="post">
  <label name="figure[name]">Name</label>
  <input type="text" name="figure[name]" id="figure_name">
  <br />

  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %></input><br />
  <% end %>

  <label name="title[name]">Create a new title</label>
  <input type="text" name="title[name]" id="new_title"> <br />

  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %></input><br />
  <% end %>
  <br />

  <label name="landmark[name]">Create a new landmark</label>
  <input type="text" name="landmark[name]" id="new_landmark"> <br />

  <input type="submit" value="Create New Figure">
</form>