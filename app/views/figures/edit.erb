<h2>Edit <%= @figure.name %></h2>

<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <label name="figure[name]">Name</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
  <br />

  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>" <%= 'checked' if @figure.title_ids.include?(title.id) %>><%= title.name %></input><br />
  <% end %>

  <label name="title[name]">Create a new title</label>
  <input type="text" name="title[name]" id="new_title"> <br />

  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>" <%= 'checked' if @figure.landmark_ids.include?(landmark.id) %>><%= landmark.name %></input><br />
  <% end %>
  <br />

  <label name="landmark[name]">Create a new landmark</label>
  <input type="text" name="landmark[name]" id="new_landmark"> <br />

  <input type="submit" value="Edit Figure">
</form>